@model VigenereCryptViewModel
<div class="forms">
      <h2 class="header">Дешифратор Вижинера</h2>
      <form method="post" asp-action="Decrypt">
            <div class="forms_field">
                <label asp-for="Source">Зашифрованая строка:</label>
                <input asp-for="Source" required />
            </div>
            <div class="forms_field">
                <label asp-for="Key">Ключ:</label>
                <input asp-for="Key" required />
            </div>
            <div class="forms_field">
                  <button type="submit">Расшифровать</button>
            </div>  
      </form>
      <h2 class="header">Результат</h2>
      <div class="message">
            @ViewData["Message"]
      </div>
</div>
