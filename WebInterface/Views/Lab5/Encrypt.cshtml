<div class="forms">
    <h2 class="header">Зашифровать циклический код (7, 4)</h2>
    <form method="post" asp-action="Encrypt">
        <div class="forms_field">
            <label>Сообщение (4 бита):</label>
            <input name="source" type="text" minlength="4" maxlength="4" required />
        </div>
        <div class="forms_field">
            <input type="submit" value="Зашифровать" />
        </div>
    </form>
    <h2 class="header">Результат</h2>
    <div class="message">
        <b>Зашифрованное сообщение:</b>
        @ViewData["Message"]
    </div>
</div>
